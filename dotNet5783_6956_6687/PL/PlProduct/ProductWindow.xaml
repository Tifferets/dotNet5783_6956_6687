<Window x:Class="PL.PlProduct.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.PlProduct"
        mc:Ignorable="d"
        Title="ProductWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="ID_Label" Content="ID:" HorizontalAlignment="Left" Margin="167,36,0,0" VerticalAlignment="Top" Height="34" Width="42" RenderTransformOrigin="1.055,-1.79"/>
        <Label x:Name="Name_Label" Content="Name:" HorizontalAlignment="Left" Margin="167,141,0,0" VerticalAlignment="Top" Height="34" Width="42"/>
        <Label x:Name="Category_Label" Content="Category:" HorizontalAlignment="Left" Margin="167,89,0,0"  VerticalAlignment="Top" Height="34" Width="84" RenderTransformOrigin="4.79,3.53"/>
        <Label x:Name="Price_Label" Content="Price:" HorizontalAlignment="Left" Margin="167,197,0,0" VerticalAlignment="Top" Height="34" Width="42"/>
        <Label x:Name="InStock_Label" Content="In Stock:" HorizontalAlignment="Left" Margin="167,245,0,0"  VerticalAlignment="Top" Height="34" Width="84"/>

        <TextBox x:Name="Id_Textbox" HorizontalAlignment="Left" Margin="352,44,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Name_Textbox" HorizontalAlignment="Left" Margin="352,149,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Price_Textbox" HorizontalAlignment="Left" Margin="352,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="InStock_Textbox" HorizontalAlignment="Left" Margin="352,253,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="Category_ComboBox" HorizontalAlignment="Left" Margin="352,84,0,0"  VerticalAlignment="Top" Width="120" SelectionChanged="Category_ComboBox_SelectionChanged"/>
        <Button x:Name="AddProduct_Button" Content="Add" HorizontalAlignment="Left" Margin="623,379,0,0" VerticalAlignment="Top" Click="AddProduct_Button_Click"/>
        <Button x:Name="UpdateProduct_button" Content="Update" HorizontalAlignment="Left" Margin="498,379,0,0" VerticalAlignment="Top" Click="UpdateProduct_button_Click"/>

    </Grid>
</Window>
