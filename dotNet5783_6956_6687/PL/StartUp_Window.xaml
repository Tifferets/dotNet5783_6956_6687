<Window x:Class="PL.StartUp_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StartUp_Window" Height="450" Width="800">
    <Grid>
        <Label Content="WELCOME" HorizontalAlignment="Center" Height="70" Margin="0,83,0,0" VerticalAlignment="Top" Width="108"/>
        <GroupBox Header="Choose An Option:" Margin="186,129,220,183" >
            <StackPanel  Height="61" Margin="41,0,97,0" >
                <RadioButton x:Name ="Admin" Content="Admin" Height="24" IsChecked="True"/>
                <RadioButton x:Name ="NewOrder" Content="New Order" Height="23" Margin="0,0,-11,0"/>
                <RadioButton x:Name ="TrackOrder" Content="Track An Order" Height="35"/>
            </StackPanel>
        </GroupBox>

        <Button x:Name="Next_button" Content="Next" Margin="322,301,318,80" Click="Next_button_Click"/>

    </Grid>
</Window>
